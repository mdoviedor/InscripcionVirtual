                    <td>{{ entity.estudiantenf.nombres }}</td>
                    <td>{{ entity.estudiantenf.apellidos }}</td>
                    <td>{{ entity.estudiantenf.edad }}</td>
                    <td>{{ entity.estudiantenf.telefono }}</td>
                    <td>{{ entity.estudiantenf.celular }}</td>            
