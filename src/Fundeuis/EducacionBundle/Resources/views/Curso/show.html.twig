                <td>{{ entity.descripcion }}</td>
            </tr>
            <tr>
                <th>Nombre Curso</th>
                <td>{{ entity.nombrecurso.nombre }}</td>
            </tr>
            <tr>
                <th>Autor</th>
                <td>{{ entity.autor.nombres }} {{ entity.autor.apellidos }}</td>
